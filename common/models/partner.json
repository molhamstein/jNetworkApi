{
  "name": "partner",
  "plural": "partners",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      "roles"
    ]
  },
  "properties": {
    "fullname": {
      "type": "string",
      "required": true
    },
    "partner_mobile": {
      "type": "string",
      "required": true
    },
    "businessName": {
      "type": "string"
    },
    "balance": {
      "type": "string"
    },
    "min_balance": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "default": "active"
    }
  },
  "validations": [],
  "relations": {
    "ADs": {
      "type": "hasMany",
      "model": "AD",
      "foreignKey": "partner_id"
    },
    "Campaigns": {
      "type": "hasMany",
      "model": "campaign",
      "foreignKey": "partner_id"
    },
    "roles": {
      "type": "hasMany",
      "model": "role",
      "foreignKey": "principalId",
      "through": "rolemapping"
    }
  },
  "acls": [{
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "ALLOW"
  }],
  "methods": {
    "getCategories": {
      "accepts": [{
          "arg": "location_id",
          "type": "number"
        },
        {
          "arg": "type",
          "type": "string"
        },
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        }
      ],
      "returns": [{
        "arg": "result",
        "type": "array",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/getCategories",
        "verb": "get"
      }]
    }
  }
}
